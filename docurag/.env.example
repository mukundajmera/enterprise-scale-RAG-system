# =============================================================================
# DocuRAG - Enterprise Document Intelligence Platform
# Environment Variables Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Clerk Authentication
# Get these from: https://dashboard.clerk.com
# -----------------------------------------------------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# -----------------------------------------------------------------------------
# Database - Neon PostgreSQL
# Get these from: https://console.neon.tech
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@your-neon-endpoint.neon.tech/docurag?sslmode=require

# -----------------------------------------------------------------------------
# Google Cloud Platform
# Create a service account with Storage Admin and Vertex AI User roles
# Download the JSON key and paste as a single line
# -----------------------------------------------------------------------------
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"..."}
GCS_BUCKET_NAME=your-docurag-bucket

# -----------------------------------------------------------------------------
# Qdrant Vector Database
# Get these from: https://cloud.qdrant.io
# -----------------------------------------------------------------------------
QDRANT_URL=https://your-cluster.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key

# -----------------------------------------------------------------------------
# Upstash Redis (for rate limiting)
# Get these from: https://console.upstash.com
# -----------------------------------------------------------------------------
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# -----------------------------------------------------------------------------
# Python Worker Service
# URL of the FastAPI worker service for document processing
# WORKER_SECRET is REQUIRED in production for security
# -----------------------------------------------------------------------------
WORKER_URL=http://localhost:8000
WORKER_SECRET=your_secure_worker_secret_here

# -----------------------------------------------------------------------------
# Streaming Configuration (Optional)
# Customize the streaming behavior for query responses
# -----------------------------------------------------------------------------
# STREAM_CHUNK_SIZE=256
# STREAM_CHUNK_DELAY_MS=0

# -----------------------------------------------------------------------------
# Confidence Thresholds (Optional)
# Default values shown. These should match between TypeScript and Python.
# -----------------------------------------------------------------------------
# CONFIDENCE_HIGH_THRESHOLD=0.85
# CONFIDENCE_MEDIUM_THRESHOLD=0.7

# -----------------------------------------------------------------------------
# Vertex AI (Google AI)
# Uses the GCP credentials above
# -----------------------------------------------------------------------------
VERTEX_AI_LOCATION=us-central1
